{
	"languageserver": {
		"golang": {
			"command": "gopls",
			"args": ["serve", "-debug", ""],
			"filetypes": ["go"],
			"rootPatterns": ["main.go", "*.go"],
			"requireRootPattern": true,
			"ignoredRootPaths": ["/Users/alexperkins/src/github.com/monzo/wearedev/"]
		},
		"proto": {
			"filetypes": ["proto"],
			"rootPatterns": ["*.proto"],
			"requireRootPattern": true

		}
	},

	"diagnostic-lanaguageserver.filetypes": {
		"sh": "shellcheck",
		"javascript": "eslint",
		"javascript.jsx": "eslint"
	},

	"yaml.schemas": {
		"kubernetes": "/*.yaml"
	},

	"coc.preferences.formatOnSaveFiletypes": [
		"css", "markdown", "javascript", "graphql", "yaml", "js", "golang"
	],

	"diagnostic.displayByAle": true,
	"python.linting.mypyEnabled": true,
	"python.linting.flake8Enabled": true,
	"python.formatting.blackPath": "black"
}
